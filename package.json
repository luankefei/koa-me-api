{
  "name": "koa-me-api",
  "version": "1.0.0",
  "description": "koa version",
  "private": true,
  "license": "UNLICENSED",
  "author": "kefei",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js --color --progress",
    "build:watch": "webpack --watch",
    "build:prod": "better-npm-run build:prod",
    "build:pre": "better-npm-run build:pre",
    "build:dev": "better-npm-run build:dev",
    "coverage": "npm test -- --coverage",
    "coverage:notify": "npm run coverage -- --watch --notify",
    "format": "prettier --no-semi --single-quote --parser typescript --write \"src/**/*.ts\"",
    "format:pb": "prettier --no-semi --single-quote --parser typescript --write \"src/proto/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "precommit": "lint-staged",
    "preupver": "npm test",
    "pretest": "npm run build",
    "start": "npm run build && node dist/index.js",
    "dev": "npm run build:dev",
    "start:dev": "NODE_ENV=development MODE=dev node dist/index.js",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:notify": "npm run test:watch -- --notify",
    "upver": "standard-version"
  },
  "betterScripts": {
    "build:dev": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "development",
        "MODE": "dev"
      }
    },
    "build:pre": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production",
        "MODE": "pre"
      }
    },
    "build:prod": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production",
        "MODE": "prod"
      }
    }
  },
  "lint-staged": {
    "src/**/**.ts": [
      "prettier --no-semi --single-quote --parser typescript --write",
      "tslint -e \"src/*.d.ts\"",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luankefei/koa-me-api.git"
  },
  "bugs": {
    "url": "https://github.com/luankefei/koa-me-api/issues"
  },
  "homepage": "https://github.com/luankefei/koa-me-api#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "isomorphic-fetch": "^3.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-cors": "^0.0.16",
    "koa-helmet": "^6.1.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^10.1.1",
    "koa-static": "^5.0.0",
    "moment": "^2.29.1",
    "mysql2": "^2.3.3",
    "source-map-support": "^0.5.21",
    "typeorm": "^0.2.41",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/source-map-support": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.9.0",
    "better-npm-run": "^0.1.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "jest": "^27.4.6",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  }
}
